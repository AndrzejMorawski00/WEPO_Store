<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Login</title>
        <link rel="stylesheet" href="../static/styles/register_login.css" />
        <link rel="stylesheet" href="../static/styles/settings.css" />
    </head>
    <body>
        <a class="link" href="/">Return to main page</a>
        <h1 class="heading">Login</h1>
        <ul>
            <% if (typeof errors != 'undefined') {%> <% errors.forEach(error => {%>
            <li class="errors"><p class="errors__p"><%= error.message%></p></li>
            <% })%> <%}%> <% if (messages.success_msg) {%>
            <li class="errors"><p class="errors__p"><%=messages.success_msg%></p></li>
            <%}%>
        </ul>
        <form class="form" action="" method="POST">
            <label class="form__input" for="user_email">User Email:</label>
            <input class="form__input" type="text" name="user_email" value="tomasz@gmail.com" id="user_email" required />

            <label class="form__input" for="user_password">User Password:</label>
            <input class="form__input" type="password" name="user_password" value="haslo123" id="user_password" required />

            <input class="form__submit" type="submit" value="Login" />
        </form>
        <a class="link" href="/users/register">Don't have an account? Create one</a>
    </body>
</html>
